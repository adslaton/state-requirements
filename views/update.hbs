<!DOCTYPE html>
<html>
{{> head}}
<body>
    {{> nav}}
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="/{{type}}s">{{display}}s</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active">Update</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/delete/{{type}}s/{{_id}}">Delete</a>
      </li>
    </ul>
    <form class="form-border" action="/update/{{type}}s/{{id}}" method="post">
        <div class="form-group row">
            <label for="formName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="formName" value="{{name}}" name="name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="formDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="formDescription" value="{{description}}" name="description">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" href="/{{type}}s/{{id}}" role="button">Cancel</a>
    </form>
</body>
</html>
